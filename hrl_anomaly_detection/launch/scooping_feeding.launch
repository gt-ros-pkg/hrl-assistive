
<launch>

    <arg name="ad_param" default="$(find hrl_manipulation_task)/params/anomaly_detection.yaml" />    
    <rosparam command="load" file="$(arg ad_param)" />


    <group ns="scooping" >
      <node name="soundplay_node" pkg="sound_play" type="soundplay_node.py"/>
      <node name="anomaly_detector" pkg="hrl_anomaly_detection"
            type="anomaly_detector.py" args="--task scooping --dim 4" output="screen" />
    </group>

    <group ns="feeding" >
      <node name="soundplay_node" pkg="sound_play" type="soundplay_node.py"/>
      <node name="anomaly_detector" pkg="hrl_anomaly_detection"
            type="anomaly_detector.py" args="--task feeding --dim 2" output="screen" />
    </group>


</launch>


